<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="@dimen/FPF_WIDTH_MATCH"
            android:layout_height="@dimen/FPF_HEIGHT_MATCH"
            android:layout_marginTop="@dimen/FPF_MARGIN_TOP"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/FPF_MARGIN_END"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/FPF_MARGIN_START"
            android:layout_marginBottom="@dimen/FPF_MARGIN_BOTTOM"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/mainView"/>
</androidx.constraintlayout.widget.ConstraintLayout>